{
  "compileOnSave": true,
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "umd",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
