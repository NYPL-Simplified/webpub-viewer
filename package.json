{
  "name": "webpub-viewer",
  "version": "0.1.0",
  "author": "EDRLab",
  "description": "A viewer application for EPUB files.",
  "repository": "https://github.com/edrlab/webpub-viewer",
  "license": "Apache-2.0",
  "private": true,
  "main": "src/index.js",
  "typings": "src/index.ts",
  "engines": {
    "node": ">8.0.0"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc --p . && tsc --p tsconfig-sw.json && npm run build:sass && cpx 'dist/*.{css,js}' viewer/",
    "build:sass": "node-sass --source-map true src/styles/sass/ -o dist/",
    "test": "rimraf lib && tsc --p tsconfig-test.json && mocha --require jsdom-global/register --recursive lib/test",
    "visual-test": "backstop test",
    "visual-test:init": "backstop reference",
    "visual-test:update": "backstop approve",
    "examples": "rimraf examples/static/viewer examples/streamed/misc/readers/reader-NYPL && cpx 'viewer/*.{html,css,js,png,svg}' examples/static/viewer && cpx 'viewer/*.{html,css,js,png,svg}' examples/streamed/misc/readers/reader-NYPL && cpx 'viewer/*.{css,js,png,svg}' examples/embedded/alice",
    "static": "node \"./examples/static/static-server.js\"",
    "streamed": "cd ./examples/streamed && PORT=4444 node \"./streamed-server.js\" ./epubs",
    "embedded": "node \"./examples/embedded/embedded-server.js\"",
    "clean": "rimraf node_modules lib dist",
    "prepublishOnly": "npm run test",
    "about": "echo 'Do not update @types/parse5 to version 5 or else it will break jsdom typings!'",
    "build:streamed": "npm run prepublish && npm run copy:all",
    "copy:all": "npm run copy:readium-css && npm run copy:r2-navigator && npm run copy:r2-glue-js && npm run copy:streamed",
    "copy:readium-css": "cp -r ./node_modules/readium-css/css/dist examples/streamed/readers/reader-JBKS/readium-css",
    "copy:r2-glue-js": "cp ./node_modules/r2-glue-js/dist/ReadiumGlue.js examples/streamed/readers/reader-JBKS/r2-glue-js.js",
    "copy:r2-navigator": "mkdir -p examples/streamed/readers/reader-JBKS/@readium && cp ./node_modules/@readium/navigator-web/dist/readium-navigator-web.umd.js examples/streamed/readers/reader-JBKS/@readium/navigator-web.js",
    "copy:streamed": "cpx 'viewer/*.{html,css,js}' examples/streamed/readers/reader-JBKS"
  },
  "dependencies": {
    "promise-polyfill": "^8.0.0",
    "url-polyfill": "^1.0.13",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/jquery": "^3.3.31",
    "@types/jsdom": "^2.0.30",
    "@types/mocha": "^5.2.2",
    "@types/node": "^10.14.19",
    "@types/parse5": "^4.0.0",
    "@types/promise-polyfill": "^6.0.0",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "cpx": "^1.5.0",
    "express": "^4.16.4",
    "jsdom": "^9.8.3",
    "jsdom-global": "^2.1.0",
    "mocha": "^6.0.2",
    "node-sass": "^4.11.0",
    "r2-streamer-js": "1.0.7",
    "reflect-metadata": "^0.1.13",
    "requirejs": "^2.3.6",
  "rimraf": "^2.6.3",
    "sinon": "^7.2.7",
    "typescript": "^3.2.2"
  }
}
