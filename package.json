{
  "name": "library-simplified-webpub-viewer",
  "version": "0.1.1",
  "author": "NYPL Digital",
  "description": "A viewer application for EPUB files.",
  "repository": "https://github.com/NYPL-simplified/webpub-viewer",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "typings": "src/index.ts",
  "engines": {
    "node": ">8.0.0"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc --p . && tsc --p tsconfig-sw.json && npm run build:sass && cpx 'dist/*.{css,js}' viewer/",
    "build:sass": "node-sass --source-map true src/styles/sass/ -o dist/",
    "test": "rimraf lib && tsc --p tsconfig-test.json && mocha --require jsdom-global/register --recursive lib/test",
    "visual-test": "backstop test",
    "visual-test:init": "backstop reference",
    "visual-test:update": "backstop approve",
    "static": "node \"./examples/static/static-server.js\"",
    "streamed": "cd ./examples/streamed && PORT=4444 node \"./streamed-server.js\"",
    "embedded": "node \"./examples/embedded/embedded-server.js\"",
    "clean": "rimraf node_modules lib dist",
    "prepublishOnly": "npm run test",
    "about": "echo 'Do not update @types/parse5 to version 5 or else it will break jsdom typings!'",
    "build:streamed": "npm run prepublish",
    "eb-start": "npm run prepare && npm run streamed"
  },
  "dependencies": {
    "cpx": "^1.5.0",
    "ejs": "^2.4.1",
    "express": "^4.16.4",
    "node-sass": "^4.13.0",
    "promise-polyfill": "^8.0.0",
    "r2-streamer-js": "1.0.25",
    "r2-utils-js": "^1.0.18",
    "url-polyfill": "^1.0.13",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/jquery": "^3.3.31",
    "@types/jsdom": "^2.0.30",
    "@types/mocha": "^5.2.2",
    "@types/node": "^10.14.19",
    "@types/parse5": "^4.0.0",
    "@types/promise-polyfill": "^6.0.0",
    "@types/sinon": "^5.0.1",
    "@zoltu/typescript-transformer-append-js-extension": "^1.0.1",
    "chai": "^4.1.2",
    "jsdom": "^9.8.3",
    "jsdom-global": "^2.1.0",
    "mocha": "^6.0.2",
    "reflect-metadata": "^0.1.13",
    "requirejs": "^2.3.6",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.7",
    "typescript": "^3.9.5"
  }
}
